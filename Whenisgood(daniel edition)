<body>
<header>
  <div>
    <h1>Simple WhenIsGood-Style Scheduler</h1>
    <small>Range: Nov 9–17, 2025 · 7:00–21:00 · 30-minute slots</small>
  </div>
  <div class="tabs">
    <button class="tab-button active" data-tab="input">Enter Availability</button>
    <button class="tab-button" data-tab="group">Group View</button>
  </div>
</header>

<main>
  <div id="tab-input" class="card">
    <div class="section-title">Step 1 – Mark your availability</div>
    <div class="section-subtitle">
      Type your name, then click on each time slot that works for you. Green = available.
    </div>

    <label for="nameInput">Your name</label>
    <input type="text" id="nameInput" placeholder="e.g., Kevin" />

    <div class="small">
      Tip: This demo stores everything in <code>localStorage</code> only. For full multi-user support,
      plug this into a real backend (API / DB).
    </div>

    <div class="grid-wrapper" id="inputGrid"></div>

    <div class="controls">
      <button id="saveAvailabilityBtn">Save availability</button>
      <button class="secondary" id="clearSelectionBtn">Clear selection</button>
      <button class="secondary" id="resetAllBtn">Reset all data</button>
      <span class="pill" id="statusPill">No data saved yet</span>
    </div>
  </div>

  <div id="tab-group" class="card" style="display:none;">
    <div class="section-title">Step 2 – Group availability</div>
    <div class="section-subtitle">
      Each cell shows how many people are available. Click a cell to see who.
    </div>

    <div class="tag">
      <span class="dot"></span>
      <span>Best slots = highest numbers (everyone free)</span>
    </div>

    <div class="grid-wrapper" id="groupGrid" style="margin-top:0.75rem;"></div>

    <div class="legend">
      <div class="legend-item">
        <span class="legend-swatch swatch-0"></span><span>0 available</span>
      </div>
      <div class="legend-item">
        <span class="legend-swatch swatch-1"></span><span>1 available</span>
      </div>
      <div class="legend-item">
        <span class="legend-swatch swatch-2"></span><span>2 available</span>
      </div>
      <div class="legend-item">
        <span class="legend-swatch swatch-3"></span><span>3+ available</span>
      </div>
    </div>

    <div class="notice" id="groupNotice"></div>
  </div>
</main>

<script>
  // ---------- CONFIG ----------
  const START_DATE = "2025-11-09";
  const END_DATE   = "2025-11-17";
  const START_HOUR = 7;   // 7 AM
  const END_HOUR   = 21;  // 9 PM
  const SLOT_MIN   = 30;  // minutes per slot

  const STORAGE_KEY = "simple_whenisgood_availability_v1";

  // ---------- UTILITIES ----------
  function dateRange(startStr, endStr) {
    const dates = [];
    const start = new Date(startStr + "T00:00:00");
    const end   = new Date(endStr   + "T00:00:00");
    for (let d = new Date(start); d <= end; d.setDate(d.getDate() + 1)) {
      const yyyy = d.getFullYear();
      const mm = String(d.getMonth() + 1).padStart(2, "0");
      const dd = String(d.getDate()).padStart(2, "0");
      dates.push(`${yyyy}-${mm}-${dd}`);
    }
    return dates;
  }

  function formatDateLabel(iso) {
    const d = new Date(iso + "T00:00:00");
    const weekday = d.toLocaleDateString(undefined, { weekday: "short" });
    const month = d.toLocaleDateString(undefined, { month: "short" });
    const day = d.getDate();
    return `${weekday} ${month} ${day}`;
  }

  function formatTimeLabel(hour, minute) {
    const d = new Date();
    d.setHours(hour, minute, 0, 0);
    return d.toLocaleTimeString([], { hour: "numeric", minute: "2-digit" });
  }

  function generateSlots() {
    const slots = [];
    for (let h = START_HOUR; h < END_HOUR; h++) {
      for (let m = 0; m < 60; m += SLOT_MIN) {
        slots.push({ hour: h, minute: m });
      }
    }
    return slots;
  }

  function makeSlotId(dateStr, hour, minute) {
    const hh = String(hour).padStart(2, "0");
    const mm = String(minute).padStart(2, "0");
    return `${dateStr}T${hh}:${mm}`;
  }

  function loadData() {
    try {
      const raw = localStorage.getItem(STORAGE_KEY);
      if (!raw) return [];
      const parsed = JSON.parse(raw);
      if (!Array.isArray(parsed)) return [];
      return parsed;
    } catch (e) {
      console.error("Error parsing stored availability:", e);
      return [];
    }
  }

  function saveData(arr) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(arr));
  }

  // ---------- GLOBALS ----------
  const dates = dateRange(START_DATE, END_DATE);
  const slots = generateSlots();
  let availableSlots = new Set(); // currently selected slots for the active user
  let allUsers = loadData();      // [{ name, slots: [slotId, ...] }, ...]
  let slotIndexMap = new Map();   // slotId -> {row, col} for input grid
  let lastClickedSlotId = null;   // last clicked slot for Shift+click

  const inputGridEl = document.getElementById("inputGrid");
  const groupGridEl = document.getElementById("groupGrid");
  const statusPillEl = document.getElementById("statusPill");
  const groupNoticeEl = document.getElementById("groupNotice");

  const nameInputEl = document.getElementById("nameInput");
  const saveBtn = document.getElementById("saveAvailabilityBtn");
  const clearSelectionBtn = document.getElementById("clearSelectionBtn");
  const resetAllBtn = document.getElementById("resetAllBtn");

  // ---------- TABS ----------
  document.querySelectorAll(".tab-button").forEach((btn) => {
    btn.addEventListener("click", () => {
      const tab = btn.dataset.tab;
      document.querySelectorAll(".tab-button").forEach((b) => b.classList.remove("active"));
      btn.classList.add("active");

      document.getElementById("tab-input").style.display = tab === "input" ? "block" : "none";
      document.getElementById("tab-group").style.display = tab === "group" ? "block" : "none";

      if (tab === "group") {
        renderGroupGrid();
      }
    });
  });

  // ---------- SLOT SELECTION HELPERS (Shift+click logic) ----------
  function toggleSlotCell(slotId, cell, forceState = null) {
    const shouldSelect = forceState !== null ? forceState : !availableSlots.has(slotId);

    if (shouldSelect) {
      availableSlots.add(slotId);
      cell.classList.add("available");
    } else {
      availableSlots.delete(slotId);
      cell.classList.remove("available");
    }
  }

  function handleSlotClick(event, cell, slotId) {
    // If Shift is held and we have a previous cell, select a rectangle range
    if (event.shiftKey && lastClickedSlotId && slotIndexMap.has(lastClickedSlotId) && slotIndexMap.has(slotId)) {
      const start = slotIndexMap.get(lastClickedSlotId);
      const end = slotIndexMap.get(slotId);

      const rowStart = Math.min(start.row, end.row);
      const rowEnd   = Math.max(start.row, end.row);
      const colStart = Math.min(start.col, end.col);
      const colEnd   = Math.max(start.col, end.col);

      const targetSelected = availableSlots.has(slotId);
      const desiredState = !targetSelected; // if target is OFF, we turn all ON, etc.

      for (let r = rowStart; r <= rowEnd; r++) {
        for (let c = colStart; c <= colEnd; c++) {
          const currentSlotId = makeSlotId(dates[c], slots[r].hour, slots[r].minute);
          const cellEl = inputGridEl.querySelector(`.slot[data-slot-id="${currentSlotId}"]`);
          if (cellEl) {
            toggleSlotCell(currentSlotId, cellEl, desiredState);
          }
        }
      }
    } else {
      // Normal single-cell toggle
      toggleSlotCell(slotId, cell);
    }

    lastClickedSlotId = slotId;
  }

  // ---------- INPUT GRID ----------
  function renderInputGrid() {
    const table = document.createElement("table");
    const thead = document.createElement("thead");
    const tbody = document.createElement("tbody");

    // reset mapping each render
    slotIndexMap = new Map();

    // header row
    const headerRow = document.createElement("tr");
    const corner = document.createElement("th");
    corner.textContent = "Time";
    corner.className = "time-col";
    headerRow.appendChild(corner);

    dates.forEach((d) => {
      const th = document.createElement("th");
      th.textContent = formatDateLabel(d);
      headerRow.appendChild(th);
    });
    thead.appendChild(headerRow);

    // body rows
    slots.forEach(({ hour, minute }, rowIndex) => {
      const row = document.createElement("tr");

      const timeCell = document.createElement("td");
      timeCell.textContent = formatTimeLabel(hour, minute);
      timeCell.className = "time-col";
      row.appendChild(timeCell);

      dates.forEach((d, colIndex) => {
        const slotId = makeSlotId(d, hour, minute);
        const td = document.createElement("td");
        td.className = "slot";
        td.dataset.slotId = slotId;

        // store position for Shift+click range
        slotIndexMap.set(slotId, { row: rowIndex, col: colIndex });

        td.addEventListener("click", (event) => handleSlotClick(event, td, slotId));

        row.appendChild(td);
      });

      tbody.appendChild(row);
    });

    table.appendChild(thead);
    table.appendChild(tbody);
    inputGridEl.innerHTML = "";
    inputGridEl.appendChild(table);
  }

  function clearCurrentSelection() {
    availableSlots.clear();
    lastClickedSlotId = null;
    inputGridEl.querySelectorAll(".slot.available").forEach((cell) => {
      cell.classList.remove("available");
    });
  }

  // ---------- SAVE / RESET ----------
  saveBtn.addEventListener("click", () => {
    const name = nameInputEl.value.trim();
    if (!name) {
      alert("Please enter your name before saving.");
      return;
    }
    if (availableSlots.size === 0) {
      if (!confirm("You have no selected slots. Save an empty availability for this name?")) {
        return;
      }
    }

    const slotsArray = Array.from(availableSlots);

    // Replace existing user with same name (case-insensitive)
    const idx = allUsers.findIndex((u) => u.name.toLowerCase() === name.toLowerCase());
    if (idx >= 0) {
      allUsers[idx] = { name, slots: slotsArray };
    } else {
      allUsers.push({ name, slots: slotsArray });
    }

    saveData(allUsers);
    statusPillEl.textContent = `Saved for ${name} (${slotsArray.length} slots)`;
    statusPillEl.style.background = "#14532d";
    statusPillEl.style.color = "#bbf7d0";

    renderGroupGrid();
  });

  clearSelectionBtn.addEventListener("click", () => {
    clearCurrentSelection();
  });

  resetAllBtn.addEventListener("click", () => {
    if (!confirm("This will delete ALL saved availability data on this device. Continue?")) return;
    localStorage.removeItem(STORAGE_KEY);
    allUsers = [];
    clearCurrentSelection();
    statusPillEl.textContent = "No data saved yet";
    statusPillEl.style.background = "";
    statusPillEl.style.color = "";
    renderGroupGrid();
  });

  // ---------- GROUP GRID ----------
  function renderGroupGrid() {
    const table = document.createElement("table");
    const thead = document.createElement("thead");
    const tbody = document.createElement("tbody");

    const headerRow = document.createElement("tr");
    const corner = document.createElement("th");
    corner.textContent = "Time";
    corner.className = "time-col";
    headerRow.appendChild(corner);

    dates.forEach((d) => {
      const th = document.createElement("th");
      th.textContent = formatDateLabel(d);
      headerRow.appendChild(th);
    });
    thead.appendChild(headerRow);

    // Precompute slot -> names
    const slotMap = new Map(); // id -> [names...]
    allUsers.forEach((u) => {
      (u.slots || []).forEach((slotId) => {
        if (!slotMap.has(slotId)) slotMap.set(slotId, []);
        slotMap.get(slotId).push(u.name);
      });
    });

    slots.forEach(({ hour, minute }) => {
      const row = document.createElement("tr");

      const timeCell = document.createElement("td");
      timeCell.textContent = formatTimeLabel(hour, minute);
      timeCell.className = "time-col";
      row.appendChild(timeCell);

      dates.forEach((d) => {
        const slotId = makeSlotId(d, hour, minute);
        const td = document.createElement("td");
        td.className = "slot";

        const names = slotMap.get(slotId) || [];
        const count = names.length;
        td.textContent = count;

        if (count === 0) {
          td.classList.add("slot-count-0");
        } else if (count === 1) {
          td.classList.add("slot-count-1");
        } else if (count === 2) {
          td.classList.add("slot-count-2");
        } else if (count >= 3) {
          td.classList.add("slot-count-3plus");
        }

        if (count > 0) {
          td.title = names.join(", ");
          td.addEventListener("click", () => {
            alert(`${formatDateLabel(d)} at ${formatTimeLabel(hour, minute)}\n\nAvailable:\n- ${names.join("\n- ")}`);
          });
        }

        row.appendChild(td);
      });

      tbody.appendChild(row);
    });

    table.appendChild(thead);
    table.appendChild(tbody);
    groupGridEl.innerHTML = "";
    groupGridEl.appendChild(table);

    if (allUsers.length === 0) {
      groupNoticeEl.textContent = "No responses yet. Ask people to fill out the 'Enter Availability' tab.";
    } else {
      const slotMapValues = Array.from(slotMap.values());
      const anyFilled = slotMapValues.some((arr) => arr.length > 0);
      groupNoticeEl.textContent = anyFilled
        ? `Currently tracking ${allUsers.length} participant(s).`
        : "Participants saved, but nobody has selected any slots yet.";
    }
  }

  // ---------- INIT ----------
  renderInputGrid();
  renderGroupGrid();
</script>
</body>
</html>
